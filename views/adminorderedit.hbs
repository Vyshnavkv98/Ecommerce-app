{{> adminheader}}

<style>
    .coupon-form {
  background-color: #f5f5f5;
  border-radius: 10px;
  padding: 20px;
}

.form-group {
  margin-bottom: 10px;
}

label {
  display: block;
  margin-bottom: 5px;
}

input[type="text"],
input[type="number"],
input[type="date"] {
  border: none;
  border-radius: 5px;
  padding: 10px;
  width: 100%;
}

button {
  background-color: #4CAF50;
  border: none;
  border-radius: 5px;
  color: white;
  cursor: pointer;
  padding: 10px;
  width: 100%;
}

button:hover {
  background-color: #3e8e41;
}

</style>
<div class="row">
  <div class="col-md-3 col-lg-3"></div>
  <div class="col-md-3 col-lg-3">
<div class="container py-5">

<form class="coupon-form" style="width: 650px;" method="post">
  <div class="form-group">
    <label for="code">Coupon Code:</label>
    <input type="text" id="code" name="code" placeholder="Enter coupon code" required>
  </div>
  
  <p id="mess" class="message" style="color: red;" onclick="aa()"> {{message}}</p>
  <button type="submit">Edit</button>
</form>
</div>
</div></div>

<script>

  
  function aa(){
    setTimeout(()=>{
     document.querySelector('.message').style.display = 'none';
    },2000)
  }
</script>


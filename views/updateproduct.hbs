    <body>
        <div class="signup-form">
            <form action="/admin/updateproduct" method="post" enctype="multipart/form-data">
                <h2>Edit Product</h2>
                <p>Please update the information.!</p>
                <hr>
                <div class="form-group">

                    <div class="input-group-prepend">
                    </div>
                    <input type="text" class="form-control" name="name" placeholder="name" value="{{products.name}}"
                        required>
                </div>
                <div class="form-group">
                    <input placeholder="description" id="description" name="description" class="form-control" rows="3"
                        value="{{products.description}}"></input>
                </div>
                <div class="form-group">
                    <label for="brand">Brand</label>
                    <input type="text" id="quantity" name="brand" min="1" class="form-control"
                        value="{{products.brand}}" required>
                </div>

                <div class="form-group">
                    <label for="price">Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" id="price" name="price" min="0" step="0.01" class="form-control"
                            value="{{products.price}}" required>
                    </div>
                </div>


                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" id="quantity" name="quantity" min="1" class="form-control"
                        value="{{products.quantity}}" required>
                </div>
                <div class="form-group">
                    <label for="offer">Offer</label>
                    <input type="number" id="offer" name="offer" class="form-control" value="{{products.offer}}"
                        required>
                </div>

                <div class="form-group">
                    <p style="color: red;">{{error}}</p>
                    <label for="image">Product Image</label>

                    <input type="file" id="image" name="image" class="form-control-file" accept="image/*" multiple>

                    <div>

                        <div class="d-flex py-3 " id="imagePreviewContainer"></div>

                    </div>






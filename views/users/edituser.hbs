{{> userheader}}

<style>

    body {
  background: #ffffff;
}

.form-control:focus {
  box-shadow: none;
  border-color: #BA68C8;
}

.profile-button {
  background: #BA68C8;
  box-shadow: none;
  border: none;
}

.profile-button:hover {
  background: #682773;
}

.profile-button:focus {
  background: #682773;
  box-shadow: none;
}

.profile-button:active {
  background: #682773;
  box-shadow: none;
}

.back:hover {
  color: #682773;
  cursor: pointer;
}
</style>



<div class="container rounded bg-white mt-5">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="https://i.imgur.com/0eg0aG0.jpg" width="90"><span class="font-weight-bold">{{userdata.name}}</span><span class="text-black-50">{{userdata.email}}</span><span></span></div>
            </div>
            <div class="col-md-8">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                            <h6>Back to home</h6>
                        </div>
                        <h6 class="text-right">Edit Profile</h6>
                    </div>
                    <form action="/edit" method="post">
                    <div class="row mt-2">
                        <div class="col-md-6"><input type="text" name="name" class="form-control" placeholder="first name" value="{{userdata.name}}"></div>
                        {{!-- <div class="col-md-6"><input type="text" class="form-control" value={{userdata.name}} placeholder="Doe"></div> --}}
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><input type="text" class="form-control" placeholder="Email" value="{{userdata.email}}" disabled></div>
                       
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><input type="text" name="mobile" class="form-control" value="{{userdata.mobile}}" placeholder="Phone number"></div>
                        <div class="col-md-6"><input type="hidden" name="id" class="form-control" value="{{userdata._id}}" placeholder="Phone number"></div>
                    
                    </div>
                    
                    <div class="mt-5 text-right"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{> userfooter}}
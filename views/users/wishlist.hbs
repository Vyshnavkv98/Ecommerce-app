<script>
  function wishlistDelete(data) {
    const id = data;
    console.log(data)
    const Swal = window.Swal;

    Swal.fire({
      title: 'Are you sure?',
      text: 'Do you really want to delete this item?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Yes, delete it!',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.isConfirmed) {
        // Delete the item


        fetch("/wishlist/delete", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({
            id: id
          })
        })
          .then(response => {
            return response.json();
          })
          .then(data => {
            Swal.fire(
              'Deleted!',
              'Your file has been deleted.',
              'success'
            )
          })
          .catch(error => {
            console.log(error);
          });
        location.reload()
      }

    })
  }
</script>
<script>

  async function addToCart(id, index) {
    if (!id) {
      console.log('Error: invalid data');
      return;
    }

    try {
      const response = await fetch("/wishlist/addtocart", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          id: id
        })
      })

      const data = await response.json();


      const wishlistItem = document.querySelectorAll(`.wishlist-item-${index}`);
      if (wishlistItem) {
        wishlistItem.forEach(item => {
          item.parentElement.removeChild(item);
        });
      }



      Swal.fire({
        toast: true,
        icon: 'success',
        title: 'Added to cart!',
        showConfirmButton: false,
        timer: 2000,
      });
   location.reload()
    } catch (error) {
      console.log(error);
      Swal.fire({
        toast: true,
        icon: 'error',
        title: 'Failed to add item to cart',
        showConfirmButton: false,
        timer: 2000,
      });
    }
  }


</script>



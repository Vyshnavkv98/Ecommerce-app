<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>

/* Style for wallet balance section */
.card-body .card-title {
  font-size: 3rem;
  font-weight: bold;
  margin-bottom: 0;
}

.card-body .card-subtitle {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 1rem;
}

.btn-primary {
  background-color: #25b7d3;
  border-color: #25b7d3;
}

.btn-primary:hover {
  background-color: #208ca2;
  border-color: #208ca2;
}

.btn-outline-primary {
  color: #25b7d3;
}
.card-header{
  background-color: #45cb60cd;
}
.card-header{
   background-color: #45cb60cd;
}
</style>


<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <!-- Wallet balance section -->
      <div class="card mb-4">
        <div class="card-header  text-white">
          <h5 class="m-0">Wallet Balance</h5>
        </div>
        <div class="card-body">
          <h2 class="card-title">$500.00</h2>
          <p class="card-text text-muted mb-0">Available Balance:</p>
          <h4 class="card-subtitle mb-2 text-success">$450.00</h4>
          <a href="#" class="btn btn-primary">Add Funds</a>
          <a href="#" class="btn btn-outline-primary">Withdraw</a>
        </div>
      </div>
      
      <!-- Transaction history section -->
      <div class="card">
        <div class="card-header text-white">
          <h5 class="m-0">Transaction History</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Description</th>
                  <th>Type</th>
                  <th>Amount</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>2023-03-20 12:30:22</td>
                  <td>Purchased item XYZ123</td>
                  <td class="text-success">Credit</td>
                  <td>$25.00</td>
                  <td>Completed</td>
                </tr>
                <tr>
                  <td>2023-03-18 09:15:10</td>
                  <td>Refund for item ABC789</td>
                  <td class="text-danger">Debit</td>
                  <td>$10.00</td>
                  <td>Completed</td>
                </tr>
                <tr>
                  <td>2023-03-16 16:45:38</td>
                  <td>Purchased item LMN456</td>
                  <td class="text-success">Credit</td>
                  <td>$50.00</td>
                  <td>Pending</td>
                </tr>
                <tr>
                  <td>2023-03-15 11:20:05</td>
                  <td>Withdrawal request</td>
                  <td class="text-danger">Debit</td>
                  <td>$100.00</td>
                  <td>Pending</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
